{
  "name": "tagselector",
  "version": "0.2.0",
  "description": "Turn HTML select fields into customizable / user friendly tags",
  "main": "dist/tagselector.js",
  "scripts": {
    "watch": "babel --minified src/tagselector.js -o dist/tagselector.js --watch",
    "lint": "eslint src",
    "test": "npm run lint",
    "build": "npm run build-js && npm run build-css",
    "build-js": "babel --minified src/tagselector.js -o dist/tagselector.js",
    "build-css": "sass --style=compressed src/tagselector.scss dist/tagselector.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RyanFitzgerald/tagselector.git"
  },
  "keywords": [
    "tag",
    "select",
    "cloud",
    "tagcloud",
    "customize",
    "multiple",
    "dropdown"
  ],
  "author": {
    "name": "Ryan Fitzgerald",
    "url": "https://ryanfitzgerald.ca"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RyanFitzgerald/tagselector/issues"
  },
  "homepage": "https://github.com/RyanFitzgerald/tagselector#readme",
  "devDependencies": {
    "@babel/cli": "^7.25.7",
    "@babel/core": "^7.25.8",
    "@babel/plugin-transform-modules-umd": "^7.25.7",
    "@babel/preset-env": "^7.25.8",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "sass": "^1.56.1"
  }
}
